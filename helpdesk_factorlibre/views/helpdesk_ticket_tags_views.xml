<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="helpdesk_ticket_tag_action" model="ir.actions.act_window">
        <field name="name">Ticket Tags</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">helpdesk.ticket.tag</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem 
        id="helpdesk_ticket_menu" 
        name="Tickets" 
        sequence="16"
        action="helpdesk_factorlibre.helpdesk_ticket_action"
        parent = "helpdesk_factorlibre.helpdesk_ticket_main_menu"
    />

    <menuitem 
        id="helpdesk_ticket_tags_menu" 
        name="Ticket Tags" 
        sequence="16"
        action="helpdesk_factorlibre.helpdesk_ticket_tag_action"
        parent = "helpdesk_factorlibre.helpdesk_ticket_main_menu"
    />

    <record id="ticket_tag_view_tree" model="ir.ui.view">
        <field name="name">helpdesk.ticket.tag.view.tree</field>
        <field name="model">helpdesk.ticket.tag</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="description" />
            </tree>
        </field>
    </record>

    <record id="ticket_tag_view_form" model="ir.ui.view">
        <field name="name">helpdesk.ticket.tag.view.form</field>
        <field name="model">helpdesk.ticket.tag</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name" />
                    <field name="description" />
                </group>
            </form>
        </field>
    </record>
</odoo>